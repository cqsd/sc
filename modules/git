#!/bin/bash
### sparse git shortcuts

_git_remove-from-history() { ### Fully remove a file from git history
    if [ $# -lt 1 ]; then
        echo 'usage: remove-from-history path/to/file'
        exit 1
    fi
    __sc_warn "This is a destructive command which rewrite history from the root commit."
    __sc_warn "If you're sure this is what you want, run it yourself:"
    echo
    cat <<EOF
git filter-branch --force --index-filter \\
    'git rm --cached --ignore-unmatch "$1"' \\
    --prune-empty --tag-name-filter cat -- --all
EOF
}

_git_fetch-repo-file() { ### Download a single file from a Github repository
    if [ $# -lt 1 ]; then
        echo 'usage: fetch-repo-file filepath'
        exit 1
    fi
    __sc_info "This command relies on env GITHUB_API_TOKEN"
    if [ -z "GITHUB_API_TOKEN" ]; then
        __sc_error "Set GITHUB_API_TOKEN"
        exit 1
    fi
    __sc_error "go search for the curl, it's in a gist somewhere"
}

_git_count-commits() { ### git rev-list --count --all
    git rev-list --count --all
}
